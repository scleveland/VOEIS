            $("#{"#graph-site"+@site.id.to_s+"-var"+@variable.id.to_s}").bind("plothover", function (event, pos, item) {
                var mEpoch = pos.x; // convert to milliseconds (Epoch is usually expressed in seconds, but Javascript uses Milliseconds)
